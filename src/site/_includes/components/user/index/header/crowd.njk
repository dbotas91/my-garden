<div id="crowd-graph">
  <div class="crowd-body">
    {% for row in userComputed.crowd.people %}
      {% for people in row %}
        {% if people[0] != 0 %}
          {% set slug     = people[0] %}
          {% set href     = people[1] | default('#') %}
          {% set title    = people[2] | default(slug) %}
          {% set sizePx   = people[3] | default(35) %}
          {% set xAbs     = people[4] | default(260) %}
          {% set yAbs     = people[5] | default(60) %}
          {% set centerX  = people[6] | default(260) %}
          {% set offsetX  = xAbs - centerX %}

          <a class="people people-{{ slug }}"
             href="{{ href }}"
             title="{{ title }}"
             style="position:absolute; top: {{ yAbs }}px; left: 50%; transform: translateX({{ offsetX }}px);">
            <img src="/img/{{ slug }}.svg"
                 alt="{{ slug }}"
                 style="width:auto; height:{{ sizePx }}px;">
          </a>
        {% endif %}
      {% endfor %}
    {% endfor %}
  </div>

  <div class="crowd-legends">
    {% for count in userComputed.crowd.legends %}
      <div class="stat">
        <img src="/img/{{ count.icon }}.svg" alt="{{ count.label }}" />
        {{ count.count }} {{ count.label }}{% if count.count > 1 %}s{% endif %}
      </div>
    {% endfor %}
  </div>
</div>
