<div id="forest-graph">
  <div class="forest-body">
    {# Compute split index #}
    {% set total = userComputed.forest.trees | length %}
    {% set split = (total // 2) | int %}

    <div class="forest-page forest-left">
      {% for row in userComputed.forest.trees | slice(0, split) %}
      <div class="forest-row">
        {% for tree in row %}
          {% if tree[0] == 0 %}
            <span class="tree plane">
              <span></span>
            </span>
          {% else %}
            <a class="tree" href="{{ tree[1] }}" title="{{ tree[2] }}">
              <img src="/img/{{ tree[0] }}.svg" alt="{{ tree[2] | default('') }}" style="width: auto; height: {{ 5 + (10 * tree[3]) }}px;" />
            </a>
          {% endif %}
        {% endfor %}
      </div>
      {% endfor %}
    </div>

    <div class="forest-page forest-right">
      {% for row in userComputed.forest.trees | slice(split, total - split) %}
      <div class="forest-row">
        {% for tree in row %}
          {% if tree[0] == 0 %}
            <span class="tree plane">
              <span></span>
            </span>
          {% else %}
            <a class="tree" href="{{ tree[1] }}" title="{{ tree[2] }}">
              <img src="/img/{{ tree[0] }}.svg" alt="{{ tree[2] | default('') }}" style="width: auto; height: {{ 5 + (10 * tree[3]) }}px;" />
            </a>
          {% endif %}
        {% endfor %}
      </div>
      {% endfor %}
    </div>
  </div>

  <div class="forest-legends">
    {% for count in userComputed.forest.legends %}
      <div class="stat">
        <img src="/img/{{ count.icon }}.svg" alt="{{ count.label }}" />
        {{ count.count }}
        {% if count.count > 1 %}
          {% if count.plural %}
            {{ count.plural }}
          {% else %}
            {{ count.label }}s
          {% endif %}
        {% else %}
          {{ count.label }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
